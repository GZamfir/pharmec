<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="hidden"
                />
        <field
                name="summary"
                type="editor"
                label="Rezumat"

                description="Rezumatul cartii citite"
                required="true"
                default=""
                buttons="true"

                class="inputbox"
                filter="JComponentHelper::filterText"
                />
            <field
                    name="catid"
                    type="category"
                    extension="com_book"
                    class="inputbox"
                    default=""
                    label="Carte Citita:"
                    description="Cartea pe care ati citit-o si la care doriti sa adaugati o opinie."
                    required="true"
                    >
                    <option value="0">Selectati o categorie</option>
            </field>
    </fieldset>
</form>